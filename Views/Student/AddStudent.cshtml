@model Student

<form method="post" asp-action="AddStudent" asp-controller="Student" class='p-2 row gx-3 gy-2 align-items-center'>
  <div class="form-group">
    <div class="form-group col-md-6">
      <label asp-for="Fname">First Name</label>
      <input type="text" class="form-control" id="inputFname" placeholder="Type here">
    </div>
    <div class="form-group col-md-6">
      <label asp-for="Lname">Last Name</label>
      <input type="text" class="form-control" id="inputLname" placeholder="Type here">
    </div>
  </div>
    <div class="form-group" col-md-6">
    <label asp-for="email">Email</label>
    <input type="text" class="form-control" id="inputAddress" placeholder="Enter Email">
  </div>
    <div class="form-group" col-md-6">
    <label asp-for="course">Course</label>
    <select class="form-control" asp-items="@Html.GetEnumSelectList(typeof(Course))" asp-for="course">
        </select>

  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label asp-for="dateenrolled">Date Enrolled</label>
      <input asp-for="dateenrolled" class="form-control" />
    </div>
   
        <button type="submit" class="btn btn-primary p-20">Submit</button>
    
</form>
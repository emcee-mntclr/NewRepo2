@model IEnumerable<Instructor>;
<div>Instructor List</div>
<input class="btn btn-primary" type="button" value="Add Instructor"
       onclick="@("window.location.href='" + @Url.Action("AddIns", "Instructor") + "'");" />
<table class="table table-dark">
    <tr>
        <th colspan="8">Instructor</th>
    </tr>
    <tr>
        <td>ID</td>
        <td>Firstname</td>
        <td>Lastname</td>
        <td>Rank</td>
        <td>Hiring Date</td>
        <td>Status</td>
        <td>Details</td>

        
    </tr>
    @foreach (var instructor in Model)
    {
        <tr>
        <td>@instructor.ID</td>
        <td>@instructor.FirstName</td>
        <td>@instructor.LastName</td>
        <td>@instructor.Rank</td>
        <td>@instructor.HiringDate </td>
        <td>@{
            if (@instructor.isTenured == true){
                <span>Part-time</span>
            }
            else{
                <span>Full-time</span>
            }
            }
        </td>
            <td><a asp-action="ShowDetail" asp-route-id="@instructor.ID">Show Details</a>

                <a asp-action="updateinstructor" asp-route-id="@instructor.ID" class="btn btn-primary">Update</a>
                <a asp-action="deleteinstructor" asp-route-id="@instructor.ID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
 </table>



</table>
